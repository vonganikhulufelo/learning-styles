<table class="table">
  <thead>
    <tr>
      <th>Team name</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organization.teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= team.organization %></td>
        <td><%= form_for Invitation.new do |form|  %>
            <%= form.text_field :recipient_email, id: :invitation_recipient_email %>
            <%= form.submit 'Invite!' %>
            <% end %>
        </td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>